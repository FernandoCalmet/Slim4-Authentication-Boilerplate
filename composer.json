{
    "name": "fernandocalmet/slim4-auth-boilerplate",
    "description": "Aplicaci√≥n con Autenticaciones, Validaciones, Migraciones SQL, Plantillas Twig con PHP y Slim4", 
    "type": "project",
    "authors": [
        {
            "name": "Fernando Calmet",
            "email": "fercalmet@gmail.com",
            "homepage": "https://www.github.com/fernandocalmet"
        }
    ],
    "require": {
        "php-di/slim-bridge": "3.0.0",
        "symfony/var-dumper": "^4.1",
        "slim/slim": "^4.2.0",
        "slim/twig-view": "3.0.0-beta",
        "robmorgan/phinx": "^0.10.5",
        "illuminate/database": "^5.8",
        "illuminate/validation": "^5.8",
        "slim/flash": "^0.4.0",
        "google/recaptcha": "^1.1",
        "slim/csrf": "^0.8.3",
        "slim/psr7": "^0.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {            
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080",
        "create": "php phinx create",
        "migrate": "php phinx migrate",
        "migrate one": "php phinx -e development -t",
        "test": "phpunit"
    }
}
